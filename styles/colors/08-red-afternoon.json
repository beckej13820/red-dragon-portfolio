{
	"$schema": "https://schemas.wp.org/wp/6.7/theme.json",
	"version": 3,
	"title": "Red Afternoon",
	"settings": {
		"color": {
			"palette": [
				{
					"color": "#EAEAEA",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#99001C",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#CC0025",
					"name": "Accent 1",
					"slug": "accent-1"
				},
				{
					"color": "#FFE0E5",
					"name": "Accent 2",
					"slug": "accent-2"
				},
				{
					"color": "#800017",
					"name": "Accent 3",
					"slug": "accent-3"
				},
				{
					"color": "#99001C",
					"name": "Accent 4",
					"slug": "accent-4"
				},
				{
					"color": "#FFE0E5",
					"name": "Accent 5",
					"slug": "accent-5"
				},
				{
					"color": "#80001733",
					"name": "Accent 6",
					"slug": "accent-6"
				}
			]
		}
	},
	"styles": {
		"elements": {
			"button": {
				":hover": {
					"color": {
						"background": "color-mix(in srgb, var(--wp--preset--color--contrast) 85%, black)"
					}
				}
			}
		},
		"variations": {
			"section-2": {
				"color": {
					"background": "var:preset|color|accent-3",
					"text": "var:preset|color|base"
				},
				"elements": {
					"button": {
						"color": {
							"background": "var:preset|color|accent-1",
							"text": "var:preset|color|base"
						},
						":hover": {
							"color": {
								"background": "color-mix(in srgb, var(--wp--preset--color--accent-1) 85%, transparent)"
							}
						}
					}
				}
			},
			"section-3": {
				"color": {
					"text": "var:preset|color|base"
				}
			},
			"section-4": {
				"elements": {
					"button": {
						":hover": {
							"color": {
								"background": "color-mix(in srgb, var(--wp--preset--color--accent-2) 85%, transparent)"
							}
						}
					}
				}
			},
			"section-5": {
				"elements": {
					"button": {
						":hover": {
							"color": {
								"background": "color-mix(in srgb, var(--wp--preset--color--base) 90%, transparent)"
							}
						}
					}
				}
			}
		}
	}
}
